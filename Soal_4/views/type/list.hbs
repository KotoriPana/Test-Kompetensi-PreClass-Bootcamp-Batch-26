{{> head}}
{{> navbar}}

{{#if message}}
  <div class="alert alert-{{message.type}}" role="alert">
    {{message.message}}
  </div>
{{/if}}

  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title">Add Type</h4>
            </div>
            <div class="card-body">
              <form action="" method="POST">
                <div class="row">
                  <div class="col-md-10">
                    <div class="form-group">
                      <label class="bmd-label-floating">Type</label>
                      <input type="text" class="form-control" name="name">
                    </div>
                  </div>
                  <div class="col-md">
                    <button type="submit" class="btn btn-primary pull-right">Add Type</button>
                  </div>
                </div>
                <div class="clearfix"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title ">List of Type</h4>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table">
                  <thead class=" text-primary">
                    <th>ID</th>
                    <th>Type</th>
                    <th>‎ㅤ</th>
                  </thead>
                  <tbody>
                    {{#each types}}
                    <tr>
                      <td>{{this.id}}</td>
                      <td>{{this.name}}</td>
                      <td class="td-actions text-right">
                        <a href="/type/edit/{{this.id}}" class="btn-primary btn-link">
                          <i class="material-icons">edit</i>
                        </a>
                        <a href="/type/delete/{{this.id}}" class="btn-primary btn-link">
                          <i class="material-icons">close</i>
                        </a>
                      </td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

{{> footer}}